    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    
</head>

<body>


<!-- Navigation Bar -->
<div id="wrapper"> 
  
	   <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
              <li class="sidebar-brand">
                <%=link_to "Chirp", root_path %></h1>
                <% if current_user %>
                <%if current_user.provider=='guest' %>
                <h3 class="navbar-header">Welcome, <strong><%= current_user.name %>!</strong> </h3>
                <%else%>
	  	           <h3 class="navbar-header">Signed in as <strong><%= current_user.name %></strong> </h3>
	  	            <%end%>
	               <%end%>
	             </li>
          <% if current_user %>
              <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Homepage', root_path %> </li>
              <li class="<%= 'active' if current_page?user_path(current_user) %>"><%= link_to "My Sightings", user_path(current_user)%></li>
              <li class="<%= 'active' if current_page?(submit_path) %>"><%= link_to "Submit a Sighting", '/sightings/new/' %></li>
  
              <% if current_user.is_researcher? %>
  		          <li class="<%= 'active' if current_page?(allSightings_path) %>"><%= link_to "All Sightings", '/sightings' %></li>
  		          <li class="<%= 'active' if current_page?(allUsers_path) %>"><%= link_to "All Users", '/users' %></li>
              <% end %>
  			      <li><a href="/signout">Sign Out <span class="glyphicon glyphicon-log-out"></span></a></li>
  	     
  	     
  	      <% else %>
            <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to 'Homepage', root_path %></li>
            <li> <%= link_to "Sign in with Facebook", "/auth/facebook" %></li>
            <li class="<%= 'active' if current_page?(newUser_path) %>"> <%= link_to "Create an Account", "/users/new" %></li>
            <li class="<%= 'active' if current_page?(login_path) %>"> <%= link_to "Log in", "/login" %></li>
            <li class="<%= 'active' if current_page?(guest_path) %>"> <%= link_to "Proceed as Guest", "/guest" %></li>
        	<% end %>
  	    </ul>
      </div>
<%= yield %>
